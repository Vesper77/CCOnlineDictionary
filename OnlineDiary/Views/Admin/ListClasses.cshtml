@model OnlineDiary.Models.ClassListViewModel
@{
    ViewBag.Title = "Список классов";
}

<div class="page-header">
    @Html.ActionLink("Новый урок", "CreateClass", null, new { @class="btn btn-primary pull-right" })
    <h2>Список классов</h2>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>
                    Название
                </h3>
            </th>
            <th>
                <h3>
                    Действия
                </h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Classes) {
            <tr>
                <td>@item.Title</td>
                <td>
                    @Html.ActionLink("Изменить", "EditClass", new { Id = item.Id }) |
                    @Html.ActionLink("Удалить", "DeleteClass", new { Id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>