@model string
@using Microsoft.AspNet.Identity
<div id="home-work-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Домашняя работа</h4>
            </div>
            <div class="modal-body" >
                @if (Model == "p" || Model == "c")
                {
                    <p id="home-work-text"></p>
                }
                else if(Model == "t")
                {
                    <textarea id="home-work-text" class="form-control"></textarea>
                }
            </div>
            <div class="modal-footer">
                @if (Model == "t") {
                    <button type="button" class="btn btn-primary"  id="home-work-send"  data-dismiss="modal">Отправить</button>
                } else if (Model == "c") {
                    <button class="btn btn-primary" type="button" id="home-work-ready">Сделал</button>
                }
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>
</div>
