@model OnlineDictionary.ViewModel.LoginFormViewModel

@{
    ViewBag.Title = "Онлайн дневник";
}
<div class="container">
    <div class="panel panel-default b_preview-enter ">
        <div class="panel-heading b_preview-enter ">Вход в дневник</div>
        <div class="panel-body">
            @using (Html.BeginForm("LogIn", "Home", FormMethod.Post, new { role = "form" })) {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Username</label>
                     @Html.TextBoxFor((model => model.Username), new { @class="form-control" })                    
                </div>
                <div class="form-group">
                    <label>Username</label>                    
                     @Html.TextBoxFor((model => model.Passowrd), new { @class = "form-control" })                    
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            }
        </div>
    </div>
</div>